.mask {
  width: 100%;
  height: 9000rpx;
  position: absolute;
  background-color: rgba(189, 189, 189, 0.637);
  z-index: 99;
}

.toilet-box {
  margin-top: 110rpx;
}

.toilet-list {
  width: 94%;
  position: relative;
  margin: 20rpx auto;
  border-radius: 16rpx;
  box-shadow: 0 0 8rpx grey;
  background-color: #fff;
  font-size: 28rpx;
}

.toilet-list image {
  width: 28rpx;
  height: 28rpx;
  margin-top: -3rpx;
  margin-left: 14rpx;
  vertical-align: middle;
  box-sizing: border-box;
  display: inline-block;
}

.toilet-distance {
  position: absolute;
  top: 100rpx;
  right: 40rpx;
}

.toilet-item {
  padding: 10rpx 20rpx;
}

.toilet-address {
  font-size: 20rpx;
  color: grey;
}

.good-bad image {
  width: 36rpx;
  height: 36rpx;
  margin: 10rpx 20rpx;
}

/* 提示 */
.tips{
  position: relative;
  top: 90rpx;
  margin: 20rpx auto;
  font-size: 28rpx;
  color: lightgray;
  text-align: center;
}